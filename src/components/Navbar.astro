---
import { Sun } from "lucide-react";
import home from "../../public/favicon.ico";
import { Image } from "astro:assets";
---

<nav
    class="sticky top-0 z-50 w-full border-b border-border/40 bg-background/50 backdrop-blur-md"
>
    <div class="mx-auto max-w-5xl px-6 h-16 flex items-center justify-between">
        <a
            href="/"
            class="font-bold tracking-tighter hover:opacity-80 transition-opacity"
        >
            <Image
                src="https://github.com/farhan291.png"
                alt="home"
                class="size-10 rounded-full object-cover"
                width={200}
                height={200}
                quality={100}
            />
        </a>

        <div class="hidden md:flex items-center gap-6 text-sm font-medium">
            <a href="/blog" class="hover:text-primary transition-colors">Blog</a
            >
            <a href="/projects" class="hover:text-primary transition-colors"
                >Projects</a
            >
            <a href="/about" class="hover:text-primary transition-colors"
                >About</a
            >
            <a href="/resume.pdf" class="hover:text-primary transition-colors"
                >Resume</a
            >
            <button
                onclick="
            document.documentElement.classList.toggle('dark');
            localStorage.setItem(
              'theme',
              document.documentElement.classList.contains('dark') ? 'dark' : 'light'
            );
          "
                class="p-2 hover:bg-muted rounded-lg transition-colors"
            >
                <Sun className="h-4 w-4" />
            </button>
        </div>
        
        <!-- Mobile: theme toggle (visible) + hamburger (for links) -->
        <div class="flex md:hidden items-center gap-2">
            <button
                onclick="
            document.documentElement.classList.toggle('dark');
            localStorage.setItem(
              'theme',
              document.documentElement.classList.contains('dark') ? 'dark' : 'light'
            );
          "
                class="p-2 hover:bg-muted rounded-lg transition-colors"
            >
                <Sun className="h-4 w-4" />
            </button>
            <button
                id="mobile-menu-btn"
                class="p-2 hover:bg-muted rounded-lg transition-colors"
                aria-label="Toggle menu"
            >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                </svg>
            </button>
        </div>
    </div>
    
    <!-- Mobile menu -->
    <div id="mobile-menu" class="hidden md:hidden border-t border-border bg-background px-6 py-4 space-y-3">
        <a href="/blog" class="block hover:text-primary transition-colors">Blog</a>
        <a href="/projects" class="block hover:text-primary transition-colors">Projects</a>
        <a href="/about" class="block hover:text-primary transition-colors">About</a>
        <a href="/resume.pdf" class="block hover:text-primary transition-colors">Resume</a>
    </div>
</nav>

<script>
    const btn = document.getElementById('mobile-menu-btn');
    const menu = document.getElementById('mobile-menu');
    btn?.addEventListener('click', () => {
        menu?.classList.toggle('hidden');
    });
</script>
